@page "/"
@inject JSWindow win


<Hero Size="Size.Medium">
    <HeroBody>
        <Container>
            <Title Size="Size.Size2">
                BulmaRazor 是基于 Bulma 框架、免费开源的 Razor 组件库。
            </Title>
        </Container>
        <br />
        <br />
        <br />
        <Buttons Align="Align.Centered">
            <Button Color="Color.Dark" Size="Size.Large">开始使用</Button>
        </Buttons>
    </HeroBody>
</Hero>



<Input Color="Color.Primary" @bind-Value="i" BindEvent="oninput"/>

<span>@str</span>
<span>@i</span>

<Button @onclick="e=>win.alert(str)">Show</Button>

@code{
    string str = "abc";
    int? i = 23;
}