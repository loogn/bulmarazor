@page "/"
@namespace BulmaRazorServer.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" @*class="has-navbar-fixed-top"*@>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>BulmaRazor-布尔玛·瑞</title>
    <meta name="keywords" content="blazor,bulma,razor,vue,组件,dotnet">
    <meta name="description" content="BulmaRazor（布尔玛·瑞）是基于Bulma框架开发的一套适用于Blazor的组件库。" />
    <base href="~/" />
    @*<link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
        <link href="css/site.css" rel="stylesheet" />
        <link href="BulmaBlazorServer.styles.css" rel="stylesheet" />*@

    
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="~/favicons/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="~/favicons/favicon-16x16.png" sizes="16x16">
    <link rel="shortcut icon" href="~/favicons/favicon.ico">

    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    
    <link href="_content/BulmaRazor/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="_content/BulmaRazor/bulma.css" rel="stylesheet" />
    <script src="_content/BulmaRazor/bulmarazor.js"></script>


    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/highlight/styles/vs2015.css">
    <script src="~/highlight/highlight.pack.js"></script>
    @* <script>hljs.initHighlightingOnLoad();</script> *@
    <script>
        window.hlb = (id) => hljs.highlightBlock(document.getElementById(id));
        window.docScrollTop = () => document.getElementById("layoutContent").scrollTo(0, 0);
    </script>
</head>

<body>
    <component type="typeof(App)" render-mode="ServerPrerendered" />

    @*<div id="blazor-error-ui">
        <environment include="Staging,Production">
        An error has occurred. This application may no longer respond until reloaded.
        </environment>
