@page "/test"

@inject BulmaRazorJsInterop JsInterop
@inject ToastService ToastService

<Container style="overflow: scroll" class="@B.PY6">
    <Field>
        <Button @onclick="load">Show</Button>
        <p>Date:<span>@dt1.ToString("yyyy-MM-dd HH:mm")</span></p>
    </Field>
    <Field>
        <Control>
            <DateTimePicker Options="new CalenderOptions(){StartTime = TimeSpan.FromMinutes(10)}" @bind-Value="dt1"></DateTimePicker>
        </Control>
    </Field>
    <Field>
        <p>Date:<span>@dt2.ToString("yyyy-MM-dd") ~ @dt3.ToString("yyyy-MM-dd")</span></p>
    </Field>
    <Field>
        <Control>
            <DatePicker @bind-StartDate="dt2" @bind-EndDate="dt3" Options="datePickOption1"></DatePicker>
        </Control>
    </Field>

    <br>
    str:<span>@str</span>
    <hr>
    <Button @onclick="load">Load</Button>

    <CheckBox TValue="string" indeterminate></CheckBox>
    
</Container>

@code{
    private string str = "";

    DateTime dt1 = DateTime.Parse("2021-03-02");
    DateTime dt2 = DateTime.Parse("2021-03-05 10:04");
    DateTime dt3 = DateTime.Parse("2021-03-08 02:22");
    TagsInput tagsi;

    CalenderOptions datePickOption1 = new()
    {
        IsRange = true,
        WeekStart = 1,
    // CloseOnOverlayClick=false,
    // CloseOnSelect=false,
    // MaxDate = DateTime.Now.AddDays(10),
    // MinDate = DateTime.Now.AddDays(-1)
    };

    void bexpand()
    {
        ToastService.Show("开始显示");
    }

    bool act = false;
    Dialog dialog;

    bool loading;

    async Task load()
    {
        ToastService.Show(dt1.ToString("yyyy-MM-dd"));
    }

    DateTime? date = DateTime.Now;
    TimeSpan? ts;

    void fun()
    {
        ToastService.Show("hello world");
        ToastService.Show(new ToastOptions()
        {
            Message = "Hello world 你好世界",
            Color = Color.Primary,
    // Dismissible = false,
            
            Animate = new ToastAnimate("backInDown", "fadeOutDownBig")
        });
    }

}