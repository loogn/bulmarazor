@page "/test"
@using BulmaRazorServer.Pages.docs.components.datatable

@inject BulmaRazorJsInterop JsInterop
@inject ToastService ToastService

<Container style="overflow: scroll" class="@B.PY6">

    <Carousel style="width:900px; overflow: hidden" Options="options">
        @foreach (var bgclass in new[]
        {
            B.BackgroundBlack, B.BackgroundDanger,
            B.BackgroundGrey, B.BackgroundInfo, B.BackgroundLink, B.BackgroundPrimary,
            B.BackgroundSuccess
        })
        {
            <div class="@bgclass" style="width:300px; height:240px;">
            @bgclass
            </div>
        }

    </Carousel>

</Container>

@code{

    CarouselOptions options = new CarouselOptions()
    {
        SlidesToShow = 3
    };

}