@page "/test"

@inject BulmaRazorJsInterop JsInterop
@inject ToastService ToastService

<Container class="@B.PY6">

    <Tree Data="data" OnNodeClick="nodeClick" ShowCheckBox>
    </Tree>
</Container>

@code{

    static string dataFile = "Pages/data1.json";
    List<TreeItem<string>> data = Tree<string>.BuildDataFromJson(System.IO.File.ReadAllText(dataFile));

    void nodeClick(TreeItem<string> node)
    {
         ToastService.Show(node.Text);
    }

    void Add(TreeItem<string> node)
    {
        ToastService.Show(node.Text);
    }
}