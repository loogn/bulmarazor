<Content>
    <Field>
        <Label>Val的值：</Label>
        <Control>
            <Input Value="val" IsStatic />
        </Control>
    </Field>
    <Field>
        <Label>单选框：</Label>
        <Control>
            <Radios @bind-Value="val">
                <Radio Color="Color.Danger" Value="1">Going</Radio>
                <Radio Value="2">Not going</Radio>
                <Radio Color="Color.Info" Value="3" Disabled>Maybe</Radio>
            </Radios>
        </Control>
    </Field>
    <Field>
        <Control>
            <Button Color="Color.Info" @onclick="setNewValue">绑定值+1</Button>
        </Control>
    </Field>
</Content>
@code{
    int val;
    void setNewValue()
    {
        val++;
    }
}
