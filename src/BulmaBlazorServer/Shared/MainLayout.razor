<div class="layoutPage">
    <div class="layoutPage1">

        <Navbar Color="Color.Black">
            <BrandSlot>

                <NavbarItem>
                    <a href="/">
                        <Title class="@B.TextWhite">BulmaRazor</Title>
                        @* <Image Src="/images/bulma-logo-white.png" style="width:112px;height:28px"></Image> *@
