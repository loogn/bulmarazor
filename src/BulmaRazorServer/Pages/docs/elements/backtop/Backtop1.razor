<Backtop VisibilityHeight="700" Bottom="190" Right="40" IsSmall Color="Color.Primary"  Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="700" Bottom="190" Right="90" IsNormal Color="Color.Primary" Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="700" Bottom="190" Right="140" IsMedium Color="Color.Primary" Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="700" Bottom="190" Right="190" IsLarge Color="Color.Primary" Target="#layoutContent"></Backtop>
