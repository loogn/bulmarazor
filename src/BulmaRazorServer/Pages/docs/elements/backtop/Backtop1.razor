@* 默认 *@
<Backtop Target="#layoutContent"></Backtop>
@* 颜色 *@
<Backtop VisibilityHeight="300" Bottom="90" Right="40" Color="Color.Primary"  Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="300" Bottom="90" Right="90" Color="Color.Link" Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="300" Bottom="90" Right="140" Color="Color.Info" Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="300" Bottom="90" Right="190" Color="Color.Success" Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="300" Bottom="90" Right="240" Color="Color.Warning" Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="300" Bottom="90" Right="290" Color="Color.Danger" Target="#layoutContent"></Backtop>
@* 样式 *@
<Backtop VisibilityHeight="500" Bottom="140" Right="40" IsLight Color="Color.Primary"  Target="#layoutContent"></Backtop>
<Backtop VisibilityHeight="500" Bottom="140" Right="90" IsRounded="@false" Color="Color.Primary" Target="#layoutContent"></Backtop>
