@namespace BulmaRazor.Components
@inherits BulmaComponentBase
@typeparam TValue

@if (Selected)
{
    <option @ref="opt" @attributes="Attributes" class="@classes" value="@ShowValue" selected>
        @ChildContent
    </option>
}
else
{
    <option @ref="opt" @attributes="Attributes" class="@classes" value="@ShowValue">
        @ChildContent
    </option>
}
