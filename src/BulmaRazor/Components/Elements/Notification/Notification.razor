@namespace BulmaRazor.Components

@inherits BulmaComponentBase

@if (!deleted)
{
    <div @attributes="Attributes" class="@classes">
        @if (!NoDelete)
        {
            <button class="delete" @onclick="deleteClickHandle"></button>
        }
        @ChildContent
    </div>
}

@code{
    string classes => CssBuilder.Default("notification")
        .AddClassFromAttributes(Attributes)
        .AddClass(Color.Value, Color.Value)
        .AddClass("is-light", IsLight)
        .Build();
    private bool deleted;

    [Parameter]
    public Color Color { get; set; } = Color.Default;

    private void deleteClickHandle()
    {
        if (OnDelete.HasDelegate)
        {
            OnDelete.InvokeAsync();
        }
        else
        {
            Delete();
        }
    }


    [Parameter]
    public bool NoDelete { get; set; }


    [Parameter]
    public EventCallback OnDelete { get; set; }



    public void Delete()
    {
        deleted = true;
    }

    [Parameter]
    public bool IsLight { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
} 