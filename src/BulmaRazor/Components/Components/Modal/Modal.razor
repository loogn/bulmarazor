@namespace BulmaRazor.Components

@inherits BulmaComponentBase



<div @attributes="Attributes" class="@classes">
    <div class="modal-background" @onclick="backgroundClickHandle"></div>
    <div class="modal-content">
        @ChildContent
    </div>
    @if (!NoClose)
    {
        <button class="modal-close is-large" aria-label="close" @onclick="closeClickHandle"></button>
    }
</div>


@code{
    string classes => CssBuilder.Default("modal")
        .AddClassFromAttributes(Attributes)
        .AddClass("is-active", isActive)
        .Build();


    private bool isActive { get; set; }

    [Parameter]
    public bool CloseOnClickBackground { get; set; }

    private void backgroundClickHandle()
    {
        if (CloseOnClickBackground)
        {
            Close();
        }
    }
    [Parameter]
    public bool NoClose { get; set; }


    [Parameter]
    public Size Size { get; set; } = Size.Default;

    private void closeClickHandle()
    {
        if (OnClose.HasDelegate)
        {
            OnClose.InvokeAsync(this);
        }
        else
        {
            Close();
        }
    }

    [Parameter]
    public EventCallback<Modal> OnClose { get; set; }

    public void Close()
    {
        isActive = false;
    }
    public void Show()
    {
        isActive = true;
    }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
